{
  "_comment": "Build with `packer build centos.json`",
  "_comment2": "Provision with Puppet twice to account for transient failures",
  "builders": [
    {
      "boot_command": [
        "<up><wait><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{ user `kickstart` }}<enter>"
      ],
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "{{ user `vmware_guest_os_type` }}",
      "headless": "{{ user `headless` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "output_directory": "output-{{ user `vm_name` }}-vmware-iso",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}"
      },
      "vmx_remove_ethernet_interfaces": true
    },
    {
      "boot_command": [
        "<up><wait><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{ user `kickstart` }}<enter>"
      ],
      "disk_size": "{{ user `disk_size` }}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "{{ user `virtualbox_guest_os_type` }}",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "output_directory": "output-{{ user `vm_name` }}-virtualbox-iso",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"
        ],
        [
          "modifyvm", "{{.Name}}", "--cpus", "{{ user `cpus` }}"
        ],
        [
          "modifyvm", "{{.Name}}", "--paravirtprovider", "{{ user `virtualbox_paravirtprovider` }}"
        ],
        [
          "modifyvm", "{{.Name}}", "--nictype1", "{{ user `virtualbox_nictype` }}"
        ],
        [
          "sharedfolder", "add", "{{.Name}}", "--name", "vagrant-cache", "--hostpath", "{{ user `pwd`}}/.vagrant/machines/default/cache"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `vm_name` }}"
    },
    {
      "boot_command": [
        "<up><wait><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{ user `kickstart` }}<enter>"
      ],
      "disk_size": "{{ user `disk_size` }}",
      "guest_os_type": "{{ user `parallels_guest_os_type` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "output_directory": "output-{{ user `vm_name` }}-parallels-iso",
      "parallels_tools_flavor": "lin",
      "prlctl": [
        [
          "set", "{{.Name}}", "--memsize", "{{ user `memory` }}"
        ],
        [
          "set", "{{.Name}}", "--cpus", "{{ user `cpus` }}"
        ]
      ],
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "type": "parallels-iso",
      "vm_name": "{{ user `vm_name` }}"
    },
    {
      "boot_command": [
        "<up><wait><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{ user `kickstart` }}<enter>"
      ],
      "disk_size": "{{ user `disk_size` }}",
      "format" : "qcow2",
      "disk_compression": true,
      "headless": "{{ user `headless` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "output_directory": "output-{{ user `vm_name` }}-qemu",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "{{ user `vm_name` }}",
      "accelerator": "kvm",
      "disk_cache": "unsafe",
      "disk_discard": "unmap",
      "disk_interface": "virtio-scsi",
      "qemuargs": [
        [ "-m", "{{ user `memory` }}M" ],
        [ "-smp", "cpus={{ user `cpus` }}" ]
      ]
    },
    {
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "region": "us-east-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{ user `aws_ami_name` }}_*",
          "root-device-type": "ebs"
        },
        "owners": ["679593333241"],
        "most_recent": true
      },
      "instance_type": "t2.medium",
      "ssh_username": "centos",
      "ami_name": "{{ user `vm_name`}} {{ user `version` }} {{timestamp}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": "{{user `disk_size_gb` }}",
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "tags": {
        "Application": "{{ user `vm_name`}}",
        "Environment": "dev",
        "Version": "{{ user `version` }}",
        "OS": "{{ user `aws_ami_name`}}"
      }
    },
    {
      "type": "azure-arm",
      "client_id": "{{ user `azure_client_id` }}",
      "client_secret": "{{ user `azure_client_secret` }}",
      "subscription_id": "{{ user `azure_subscription_id` }}",
      "tenant_id": "{{ user `azure_tenant_id` }}",
      "managed_image_resource_group_name": "{{ user `vm_name` }}",
      "managed_image_name": "{{ user `vm_name`}}-{{ user `version` }}-{{timestamp}}",
      "os_type": "Linux",
      "image_publisher": "OpenLogic",
      "image_offer": "CentOS",
      "image_sku": "7.5",
      "azure_tags": {
        "dept": "engineering",
        "task": "developer workstation"
      },
      "ssh_pty": "true",
      "location": "West US",
      "vm_size": "Standard_D2S_v3",
      "os_disk_size_gb": "{{ user `disk_size_gb` }}"
    },
    {
      "boot_command": [
        "c  setparams 'kickstart' <enter> linuxefi /images/pxeboot/vmlinuz inst.stage2=hd:LABEL=CentOS\\x207\\x20x\\86_64 inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `kickstart` }} inst.text<enter> initrdefi /images/pxeboot/initrd.img<enter> boot<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{ user `disk_size` }}",
      "disk_block_size": "1",
      "headless": "{{ user `headless` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "output_directory": "output-{{ user `vm_name` }}-hyperv-iso",
      "communicator": "ssh",
      "ssh_timeout": "10000s",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "hyperv-iso",
      "vm_name": "{{ user `vm_name` }}",
      "cpu": "{{ user `cpus` }}",
      "ram_size": "{{ user `memory`  }}",
      "enable_secure_boot": false,
      "guest_additions_mode": "none",
      "generation": 2
    },
    {
      "type": "docker",
      "volumes": {
        "{{ user `pwd` }}/.vagrant/machines/default/cache": "/tmp/vagrant-cache"
      },
      "image": "jdeathe/centos-ssh:centos-7-2.3.2",
      "commit": true,
      "changes": [
        "LABEL maintainer='Patrick Double <pat@patdouble.com>' org.label-schema.license='MPL-2.0' org.label-schema.vendor='https://bitbucket.org/double16' org.label-schema.name='Developer Workstation' org.label-schema.url='https://bitbucket.org/double16/linux-dev-workstation' org.label-schema.url='https://bitbucket.org/double16/linux-dev-workstation.git'",
        "ENV SSH_USER=vagrant",
        "CMD /usr/bin/supervisord --configuration=/etc/supervisord.conf"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{ user `docker_registry` }}pdouble16/linux-dev-workstation",
        "tag": "{{user `version`}}",
        "only": [ "docker" ]
      },
      {
        "type": "docker-push",
        "only": [ "docker" ]
      },
      {
        "keep_input_artifact": false,
        "output": "box/{{.Provider}}/{{user `vm_name`}}-{{user `version`}}.box",
        "type": "vagrant",
        "vagrantfile_template": "{{ user `vagrantfile_template` }}",
        "include": [ "VAGRANTUP.md" ]
      },
      {
        "keep_input_artifact": true,
        "type": "vagrant-cloud",
        "box_tag": "double16/{{user `vm_name`}}",
        "access_token": "{{user `cloud_token`}}",
        "version": "{{user `version`}}",
        "no_release": "{{ user `no_release` }}"
      }
    ]
  ],
  "provisioners": [
    {
      "environment_vars": [
        "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "yum_proxy={{user `yum_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "script/fix-slow-dns.sh",
        "script/yum-docs.sh",
        "script/docker-systemd.sh",
        "script/dind.sh",
        "script/sshd.sh",
        "script/cache.sh",
        "script/update.sh",
        "script/vagrant.sh",
        "script/desktop.sh",
        "script/vmware.sh",
        "script/virtualbox.sh",
        "script/parallels.sh",
        "script/puppet.sh",
        "script/motd.sh",
        "custom-script.sh"
      ],
      "type": "shell"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "inline": [
        "echo version={{ user `version` }} > /etc/{{ user `vm_name`}}_release",
        "echo build_time=`date` >> /etc/{{ user `vm_name`}}_release"
      ]
    },
    {
      "type": "file",
      "source": "environments/dev",
      "destination": "/etc/puppetlabs/code/environments/dev"
    },
    {
      "type": "puppet-masterless",
      "manifest_file": "environments/dev/manifests/site.pp",
      "module_paths": ["environments/dev/modules"],
      "extra_arguments": [
        "--hiera_config",
        "/etc/puppetlabs/code/environments/dev/hiera.yaml"
      ],
      "puppet_bin_dir": "/opt/puppetlabs/bin",
      "facter": {
        "proxy_url": "{{user `http_proxy`}}",
        "http_proxy": "{{user `http_proxy`}}",
        "https_proxy": "{{user `https_proxy`}}",
        "proxy_excludes": "{{user `no_proxy`}}",
        "yum_proxy": "{{user `yum_proxy`}}",
        "packer": "true",
        "ipv4only": "true"
      }
    },
    {
      "environment_vars": [
        "CLEANUP_BUILD_TOOLS={{user `cleanup_build_tools`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "yum_proxy={{user `yum_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "script/vnc.sh",
        "script/post-perm.sh",
        "script/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "cleanup_build_tools": "false",
    "cpus": "2",
    "desktop": "true",
    "disk_size": "40000",
    "disk_size_gb": "40",
    "headless": "true",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "http_directory": "kickstart/centos7",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "yum_proxy": "{{env `yum_proxy`}}",
    "install_vagrant_key": "true",
    "iso_checksum": "506e4e06abf778c3435b4e5745df13e79ebfc86565d7ea1e128067ef6b5a6345",
    "iso_checksum_type": "sha256",
    "iso_name": "CentOS-7-x86_64-DVD-1804.iso",
    "iso_path": "iso",
    "iso_url": "http://mirrors.sonic.net/centos/7.5.1804/isos/x86_64/CentOS-7-x86_64-DVD-1804.iso",
    "aws_ami_name": "CentOS Linux 7 x86_64 HVM EBS ENA 1805",
    "aws_access_key": "{{ env `AWS_ACCESS_KEY` }}",
    "aws_secret_key": "{{ env `AWS_SECRET_KEY` }}",
    "azure_client_id": "{{ env `AZURE_CLIENT_ID` }}",
    "azure_client_secret": "{{ env `AZURE_CLIENT_SECRET` }}",
    "azure_subscription_id": "{{ env `AZURE_SUBSCRIPTION_ID` }}",
    "azure_tenant_id": "{{ env `AZURE_TENANT_ID` }}",
    "docker_registry": "",
    "docker_registry_example": "gatekeeper:5001/",
    "kickstart": "ks.cfg",
    "memory": "3072",
    "parallels_guest_os_type": "centos7",
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "update": "true",
    "vagrantfile_template": "tpl/vagrantfile-centos7-desktop.tpl",
    "version": "latest",
    "no_release": "true",
    "virtualbox_guest_os_type": "RedHat_64",
    "virtualbox_paravirtprovider": "default",
    "virtualbox_nictype": "virtio",
    "vm_name": "linux-dev-workstation",
    "vmware_guest_os_type": "centos-64",
    "cloud_token": "{{ env `VAGRANT_CLOUD_TOKEN` }}",
    "pwd": "{{ env `PWD` }}"
  }
}
